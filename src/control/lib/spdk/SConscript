#!/bin/env python
"""Build DAOS SPDK Go bindings"""
from os.path import join

def scons():
    """Execute build"""
    Import('denv', 'prereqs', 'control_tgts')

    denv.AppendUnique(LIBPATH=[Dir('.')])
    denv.AppendUnique(LIBPATH=[Dir('/usr/share/dpdk/lib')])

    senv = denv.Clone()
    prereqs.require(senv, 'pmdk', 'spdk', 'ofi', 'hwloc')

    senv.AppendUnique(CPPPATH=[join(Dir('.').srcnode().abspath, "include")])
    senv.AppendUnique(OBJPREFIX='s_')
    senv.AppendUnique(RPATH_FULL=['/usr/share/dpdk/lib'])
    denv.AppendUnique(CPPPATH=[Dir('/usr/share/dpdk/include')])
    denv.AppendUnique(RPATH_FULL=['/usr/share/dpdk/lib'])

    # Explicitly link RTE & SPDK libs for CGO access
    libs = ['spdk_env_dpdk', 'spdk_nvme', 'spdk_vmd', 'rte_mempool']
    libs += ['rte_mempool_ring', 'rte_bus_pci', 'nvme_control']

    # Other libs
    libs += ['numa', 'dl']

    nc = senv.Object("src/nvme_control.c")
    ncc = senv.Object("src/nvme_control_common.c")
    ctgt = senv.Object(control_tgts)
    denv.nvmecontrol = senv.StaticLibrary("nvme_control",
                                          [ctgt, nc, ncc],
                                          LIBS=libs)

    senv.Install(join(senv.subst("$PREFIX"), "lib64"), denv.nvmecontrol)

    if prereqs.test_requested():
        SConscript('ctests/SConscript', exports='senv')

if __name__ == "SCons.Script":
    scons()
